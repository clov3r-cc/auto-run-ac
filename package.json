{
  "name": "auto-run-ac",
  "private": true,
  "type": "module",
  "scripts": {
    "fix": "pnpm run format:fix && pnpm run lint:fix",
    "format": "prettier --check --log-level=warn .",
    "format:fix": "prettier --write --log-level=warn .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev": "react-router dev",
    "build": "react-router build",
    "deploy": "pnpm run build && wrangler deploy",
    "db:gen": "drizzle-kit generate",
    "db-studio:prod": "drizzle-kit studio --config drizzle.prod.config.ts",
    "db-studio:dev": "drizzle-kit studio --config drizzle.dev.config.ts",
    "db:migrate:prod": "drizzle-kit migrate --config drizzle.prod.config.ts",
    "db:migrate:dev": "drizzle-kit migrate --config drizzle.dev.config.ts",
    "cf-typegen": "wrangler types",
    "preinstall": "pnpm dlx typesync || :",
    "postinstall": "pnpm run cf-typegen",
    "preview": "pnpm run build && vite preview",
    "typecheck": "pnpm run cf-typegen && react-router typegen && tsc -b"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.2",
    "isbot": "^5.1.28",
    "lucide-react": "^0.522.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.2",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.7.4",
    "@eslint/js": "^9.29.0",
    "@libsql/client": "^0.15.9",
    "@react-router/dev": "^7.6.2",
    "@stylistic/eslint-plugin": "^4.4.1",
    "@tailwindcss/vite": "^4.1.10",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/node": "^22.15.32",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.2.0",
    "lefthook": "^1.11.14",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "tailwindcss": "^4.1.10",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.20.5"
  }
}
