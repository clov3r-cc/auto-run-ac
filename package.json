{
  "name": "auto-run-ac",
  "private": true,
  "type": "module",
  "scripts": {
    "fix": "pnpm run format:fix && pnpm run lint:fix",
    "format": "prettier --check --log-level=warn .",
    "format:fix": "prettier --write --log-level=warn .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev": "react-router dev",
    "build": "react-router build",
    "deploy": "pnpm run build && wrangler deploy",
    "cf-typegen": "wrangler types",
    "preinstall": "npx -y only-allow pnpm; pnpm dlx typesync || :",
    "postinstall": "pnpm run cf-typegen",
    "preview": "pnpm run build && vite preview",
    "test": "vitest run",
    "typecheck": "pnpm run cf-typegen && react-router typegen && tsc -b"
  },
  "dependencies": {
    "@conform-to/react": "^1.8.1",
    "@conform-to/zod": "^1.8.1",
    "@date-fns/tz": "^1.2.0",
    "@holiday-jp/holiday_jp": "^2.5.1",
    "@praha/byethrow": "^0.6.2",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "base64-arraybuffer": "^1.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "isbot": "^5.1.28",
    "lucide-react": "^0.528.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.7.0",
    "tailwind-merge": "^3.3.1",
    "ts-pattern": "^5.7.1",
    "vite": "^7.0.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.9.6",
    "@cloudflare/vitest-pool-workers": "^0.8.55",
    "@eslint/js": "^9.31.0",
    "@react-router/dev": "^7.7.0",
    "@stylistic/eslint-plugin": "^5.2.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/node": "^22.16.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.3.0",
    "lefthook": "^1.12.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.25.0"
  }
}
